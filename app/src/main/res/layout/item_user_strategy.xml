<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/bg_chip_rail"
	android:padding="@dimen/listItemPaddingHorizontal"
	android:layout_marginBottom="@dimen/controlSpacing"
	android:focusable="true"
	android:clickable="true">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:layout_marginEnd="@dimen/controlSpacing">

		<TextView
			android:id="@+id/userStrategyName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.OhCraps.Body" />

		<TextView
			android:id="@+id/userStrategyMeta"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.OhCraps.ListItem"
			android:layout_marginTop="4dp" />
	</LinearLayout>

	<com.google.android.material.button.MaterialButton
		android:id="@+id/userStrategyActionsButton"
		style="@style/Widget.Material3.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/user_strategy_actions"
		android:minHeight="0dp"
		android:minWidth="0dp"
		android:paddingStart="8dp"
		android:paddingEnd="8dp" />

</LinearLayout>
