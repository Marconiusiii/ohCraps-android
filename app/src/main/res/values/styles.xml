		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/goldHeading</item>
		<item name="android:accessibilityHeading">true</item>
	</style>

	<style name="TextAppearance.OhCraps.SectionHeading">
		<item name="android:textSize">20sp</item>
		<item name="android:lineHeight">28sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/goldHeading</item>
